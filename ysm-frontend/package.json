    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.18",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-html-parser": "^2.0.1",
    "@types/react-redux": "^7.1.9",
