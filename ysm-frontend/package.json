{
  "name": "ysm-frontend",
  "version": "0.0.1",
  "description": "A companion app for survivors of sexual assault",
  "license": "MIT",
  "productName": "YSM",
  "author": "Chayn",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint --ext js,jsx ./",
    "lint:fix": "eslint --ext js,jsx --fix ./",
    "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
    "test:unit": "NODE_ENV=test react-scripts test --pass-with-no-tests",
    "test:unit:watch": "NODE_ENV=test react-scripts test --watch",
    "test:unit:watchAll": "NODE_ENV=test react-scripts test --watchAll",
    "test:cov": "NODE_ENV=test react-scripts test --collect-coverage --watchAll"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "next": "9.5.2",
    "prop-types": "^15.7.2",
    "react": "16.13.1",
    "react-device-detect": "^1.13.1",
    "react-dom": "16.13.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3000",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!**/serviceWorker.js",
      "!src/tests/fixtures/*.js"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6"
  }
}
