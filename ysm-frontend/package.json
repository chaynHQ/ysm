  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "lint": "eslint \"src/**/*.tsx\"",
    "lint:fix": "eslint \"src/**/*.tsx\"  --fix",
    "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
    "test:unit": "NODE_ENV=test react-scripts test",
    "test:unit:watch": "NODE_ENV=test react-scripts test --watch",
    "test:unit:watchAll": "NODE_ENV=test react-scripts test --watchAll",
    "deploy:dev": "yarn build && firebase deploy --only hosting"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
